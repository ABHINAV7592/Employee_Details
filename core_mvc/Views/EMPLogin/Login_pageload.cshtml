@model core_mvc.Models.EmployeeInsert
<form asp-action="login_click" class="form-horizondal">
    <div class="form-group">
        <label class="control-label">Employee ID</label>
        <input asp-for="emp_id" id="txt1" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Employee Name</label>
        <input asp-for="emp_name" id="txt2" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-danger" />
    </div>
</form>
@{
    if(TempData["msglog"]!=null)
    {
        <script>
        alert('@TempData["msglog"]');
             document.getElementById('txt1').value="";
                    document.getElementById('txt2').value="";
        </script>
    }
}